<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/diary_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:ignore="RtlHardcoded">



    <!-- Back button -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:contentDescription="back"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintBottom_toTopOf="@id/bottomNavD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <!-- Header: image background + title -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardHeader"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="6dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="4dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgHeaderBg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/diary_header" />


                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto"
                        android:text="Dear Diary"
                        android:textAlignment="center"
                        android:textColor="@color/dear_diary"
                        android:textSize="48sp"
                        android:textStyle="bold" />
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- Write-about pill (centered horizontally) -->
            <TextView
                android:id="@+id/labelWrite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18dp"
                android:background="@drawable/pill_blue"
                android:fontFamily="@font/roboto"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="Write about how you are feeling:"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <!-- Input row with note icon + underline -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imgNote"
                    android:layout_width="42dp"
                    android:layout_height="48dp"
                    android:contentDescription="note"
                    android:src="@drawable/ic_note" />

                <EditText
                    android:id="@+id/etEntry"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:background="@android:color/transparent"
                    android:inputType="textMultiLine"
                    android:gravity="top|start"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"/>

            <!-- Choose-mood pill  -->
            <TextView
                android:id="@+id/labelMood"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18dp"
                android:background="@drawable/pill_pink"
                android:fontFamily="@font/roboto"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="Choose a mood for today:"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <!-- Mood mini-card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMoods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnMoodHappy"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginEnd="12dp"
                            android:gravity="center"
                            app:backgroundTint="@color/yellow"
                            app:cornerRadius="40dp"
                            app:icon="@drawable/mood_happy"
                            app:iconTint="@android:color/black"
                            app:iconPadding="0dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnMoodSad"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:text=""
                            app:icon="@drawable/mood_sad"
                            app:iconTint="@android:color/black"
                            app:cornerRadius="40dp"
                            app:backgroundTint="@color/blue"
                            android:layout_marginEnd="12dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnMoodAnxious"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:text=""
                            app:icon="@drawable/mood_anxious"
                            app:iconTint="@android:color/black"
                            app:cornerRadius="40dp"
                            app:backgroundTint="@color/purple"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnMoodTired"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            app:icon="@drawable/mood_tired"
                            app:iconTint="@android:color/black"
                            app:cornerRadius="40dp"
                            app:backgroundTint="@color/green"
                            android:layout_marginEnd="12dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnMoodExcited"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:text=""
                            app:icon="@drawable/mood_excited"
                            app:iconTint="@android:color/black"
                            app:cornerRadius="40dp"
                            app:backgroundTint="@color/red"
                            android:layout_marginEnd="12dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnMoodContent"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:text=""
                            app:icon="@drawable/mood_content"
                            app:iconTint="@android:color/black"
                            app:cornerRadius="40dp"
                            app:iconPadding="0dp"
                            app:backgroundTint="@color/orange"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Save button -->

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="220dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/roboto"
                android:text="Save"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                app:backgroundTint="@color/save"
                app:cornerRadius="20dp" />


            <!-- View History -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnHistory"
                android:layout_width="260dp"
                android:layout_height="52dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/roboto"
                android:text="View History"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:backgroundTint="@color/history"
                app:cornerRadius="26dp" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom nav -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavD"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#ECE4FF"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>


