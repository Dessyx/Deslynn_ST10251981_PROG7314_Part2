<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back" />

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp" />

            <!-- Profile Icon -->
            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_user"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp" />

            <!-- User Name -->
            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User's name"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp" />

            <!-- Language Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Language"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <ImageView
                android:id="@+id/imgLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_lang"
                android:contentDescription="Language Icon"
                android:layout_marginTop="8dp" />

            <!-- Notifications -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:textStyle="bold"
                android:layout_marginTop="12dp" />

            <ImageView
                android:id="@+id/imgNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_switch"
                android:contentDescription="Notification Icon"
                android:layout_marginTop="8dp" />

            <!-- Biometrics -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biometrics"
                android:textStyle="bold"
                android:layout_marginTop="12dp" />

            <ImageView
                android:id="@+id/Biometrics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bio_switch"
                android:contentDescription="Biometrics Icon"
                android:layout_marginTop="8dp" />

            <!-- Reminder Frequency -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reminder frequency"
                android:textStyle="bold"
                android:layout_marginTop="12dp" />

            <ImageView
                android:id="@+id/imgReminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_rem"
                android:contentDescription="Reminder Icon"
                android:layout_marginTop="8dp" />

            <!-- Edit Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="#DFFFD8"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- Edit Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:drawableLeft="@drawable/ic_pen"
                        android:drawablePadding="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="What would you like your new name or password to be?"
                        android:layout_marginTop="4dp" />

                    <!-- Name Field -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name:"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <EditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:inputType="textPersonName"
                        android:background="@drawable/txtbox"
                        android:padding="8dp"
                        android:layout_marginTop="4dp" />

                    <!-- Password Field -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password:"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp" />

                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:inputType="textPassword"
                        android:background="@drawable/txtbox"
                        android:padding="8dp"
                        android:layout_marginTop="4dp" />

                    <!-- Save Button -->
                    <Button
                        android:id="@+id/btnSave"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Save"
                        android:backgroundTint="#9AFF9A"
                        android:textColor="#000000"
                        android:layout_marginTop="16dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Delete Account -->
            <Button
                android:id="@+id/btnDeleteAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete Account"
                android:backgroundTint="#FF7F7F"
                android:textColor="#000000"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="80dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ECE4FF"
        app:menu="@menu/bottom_nav_menu" />

</LinearLayout>
